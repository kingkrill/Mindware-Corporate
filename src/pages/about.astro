---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { Image } from 'astro:assets';

// Founders
import aninditaPhoto from '../assets/anindita.jpg';
import shyamPhoto from '../assets/shyam.jpg';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="About Mindware"
      description="Our mission, vision, and the team that makes it possible."
    />
  </head>
  <body>
    <Header />

    <!-- === ABOUT HERO === -->
    <section class="about-hero">
      <div class="container">
        <h1>About Us</h1>
      </div>
    </section>

    <!-- === MISSION & VISION === -->
    <section class="mission-vision">
      <div class="container">
        <div class="mv-card">
          <h2>Our Mission</h2>
          <p>
            "To empower people to realize their infinite potential through the power of
            their mind and transform their lives."
          </p>
        </div>
        <div class="mv-card">
          <h2>Our Vision</h2>
          <p>
            "To be the most trusted and preferred partner for transformational
            training, coaching, and counseling, globally."
          </p>
        </div>
      </div>
    </section>

    <!-- === FOUNDERS SECTION === -->
    <section class="founders">
      <div class="container">
        <h2>Meet Our Founders</h2>
        <div class="founders-grid">
          
          <!-- Anindita Garg (UPDATED from PDF) -->
          <div class="founder-card">
            <Image src={aninditaPhoto} alt="Anindita Garg" class="founder-img" />
            <div class="founder-info">
              <h3>Anindita Garg</h3>
              <h4>Founder & Director | Corporate Productivity Expert</h4>
              
              <p>
                Anindita is a renowned coach and mentor with over <strong>25 years of experience</strong> in behavioral transformation and training excellence. She has positively impacted over <strong>125,000 learners globally</strong>, helping professionals enhance focus, productivity, and personal effectiveness.
              </p>
              
              <p class="founder-highlight">
                Trained under <strong>Dr. Howard Gardner (Harvard University)</strong> in Multiple Intelligence Theory and an alumna of the <strong>Indian School of Business (ISB)</strong>.
              </p>

              <ul class="founder-achievements">
                <li><strong>"Woman of Substance"</strong> – Times of India</li>
                <li><strong>Maharashtra Ratan Gaurav</strong> – Visionary Youth Mentor</li>
                <li><strong>Agar Samman Award</strong> – Training & Development</li>
                <li>Featured as a <strong>"Wonder Woman"</strong> by a leading business magazine</li>
              </ul>

              <p class="philosophy">
                <em>"Refusing to Give Up is Equal to Victory."</em>
              </p>
            </div>
          </div>

          <!-- Shyam Garg (Original) -->
          <div class="founder-card">
            <Image src={shyamPhoto} alt="Shyam Garg" class="founder-img" />
            <div class="founder-info">
              <h3>Shyam Garg</h3>
              <h4>Founder, Director</h4>
              <p>
                Shyam is a highly sought-after trainer and counselor with 20 years of
                experience. He is a Certified Trainer, NLP Practitioner, and DMIT
                Counselor. He has successfully conducted over 3000 workshops for
                corporates, schools, and individuals. His mission is to empower
                people to unlock their true potential.
              </p>
            </div>
          </div>

        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>

<style>
  /* Use the same container as the homepage */
  .container {
    width: 1100px;
    max-width: calc(100% - 4rem);
    margin: 0 auto;
    padding: 4rem 2rem;
  }
  
  h2 { text-align: center; }
  h3 { text-align: center; color: var(--color-text-light); margin-top: 3rem;}

  /* === About Hero === */
  .about-hero {
    background-color: var(--color-text-body); /* D_Grey */
    text-align: center;
    padding: 2rem 0;
  }
  .about-hero h1 {
    color: var(--color-bg); /* White */
  }

  /* === Mission & Vision === */
  .mission-vision {
    background-color: var(--color-primary); /* Darkest black */
  }
  .mission-vision .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }
  .mv-card {
    background-color: var(--color-text-body); /* D_Grey */
    padding: 2.5rem;
    border-radius: 12px;
    border: 1px solid var(--color-text-light);
  }
  .mv-card h2 {
    color: var(--color-secondary); /* Yellow */
    text-align: left;
    margin-bottom: 1rem;
  }
  .mv-card p {
    font-size: 1.1rem;
    font-style: italic;
    color: var(--color-bg-light);
    line-height: 1.7;
  }

  /* === Founders === */
  .founders {
    background-color: var(--color-primary); /* Darkest black */
  }
  .founders-grid {
    display: grid;
    grid-template-columns: 1fr; /* Single column */
    gap: 3rem;
    margin-top: 3rem;
  }
  .founder-card {
    display: grid;
    grid-template-columns: 250px 1fr; /* Image | Text */
    gap: 3rem;
    background-color: var(--color-text-body);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--color-text-light);
  }
  .founder-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-height: 300px;
  }
  .founder-info {
    padding: 3rem 3rem 3rem 0;
  }
  .founder-info h3 {
    text-align: left;
    color: var(--color-bg);
    margin-bottom: 0.5rem;
  }
  .founder-info h4 {
    text-align: left;
    color: var(--color-secondary); /* Yellow */
    font-weight: 400;
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }
  .founder-info p {
    color: var(--color-bg-light);
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  /* New Styles for Founder Details */
  .founder-highlight {
    color: var(--color-bg) !important; /* Make this text pop (white) */
    margin-bottom: 1.5rem !important;
  }
  
  .founder-achievements {
    list-style-type: disc;
    padding-left: 1.5rem;
    margin-bottom: 2rem;
    color: var(--color-bg-light);
  }
  .founder-achievements li {
    margin-bottom: 0.5rem;
  }
  .founder-achievements strong {
    color: var(--color-accent); /* Highlight awards in Blue */
  }

  .philosophy {
    font-size: 1.1rem !important;
    color: var(--color-secondary) !important; /* Yellow */
    border-left: 3px solid var(--color-secondary);
    padding-left: 1rem;
    margin-top: 2rem;
  }

  /* === Responsive Tweaks === */
  @media (max-width: 900px) {
    .mission-vision .container {
      grid-template-columns: 1fr; /* Stack on mobile */
    }
    .founder-card {
      grid-template-columns: 1fr; /* Stack on mobile */
      text-align: center;
    }
    .founder-img {
      width: 100%;
      height: 400px; /* Taller image on mobile */
    }
    .founder-info {
      padding: 2rem;
    }
    .founder-info h3,
    .founder-info h4 {
      text-align: center;
    }
    .philosophy {
      text-align: left; /* Keep quote readable */
    }
  }

  @media (max-width: 720px) {
    .container {
      max-width: calc(100% - 2rem);
      padding: 3rem 1rem;
    }
  }
</style>
---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { Image } from 'astro:assets';

// --- ACTION REQUIRED ---
// You must download these images from the Mindware website
// and place them in your 'src/assets/' folder
// with these exact filenames.

// Founders
import aninditaPhoto from '../assets/anindita.jpg';
import shyamPhoto from '../assets/shyam.jpg';

// REMOVED all other team member imports
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="About Mindware"
      description="Our mission, vision, and the team that makes it possible."
    />
  </head>
  <body>
    <Header />

    <!-- === ABOUT HERO (UPDATED) === -->
    <section class="about-hero">
      <div class="container">
        <h1>About Us</h1>
        <!-- <p class="subtitle">Our mission, vision, and the team that makes it possible.</p> --> <!-- REMOVED -->
      </div>
    </section>

    <!-- === MISSION & VISION === -->
    <section class="mission-vision">
      <div class="container">
        <div class="mv-card">
          <h2>Our Mission</h2>
          <p>
            "To empower people to realize their infinite potential through the power of
            their mind and transform their lives."
          </p>
        </div>
        <div class="mv-card">
          <h2>Our Vision</h2>
          <p>
            "To be the most trusted and preferred partner for transformational
            training, coaching, and counseling, globally."
          </p>
        </div>
      </div>
    </section>

    <!-- === FOUNDERS SECTION === -->
    <section class="founders">
      <div class="container">
        <h2>Meet Our Founders</h2>
        <div class="founders-grid">
          <!-- Anindita Garg -->
          <div class="founder-card">
            <Image src={aninditaPhoto} alt="Anindita Garg" class="founder-img" />
            <div class="founder-info">
              <h3>Anindita Garg</h3>
              <h4>Co-Founder, Director</h4>
              <p>
                Anindita is a Certified Trainer from American Tesol, an NLP Practitioner,
                and a Certified DMIT Counselor. With a rich experience of 18 years in
                training, she has touched over 1,50,000 lives. Her passion is to
                transform people's lives, and she is known for her highly
                interactive, informative, and energetic training sessions.
              </p>
            </div>
          </div>
          <!-- Shyam Garg -->
          <div class="founder-card">
            <Image src={shyamPhoto} alt="Shyam Garg" class="founder-img" />
            <div class="founder-info">
              <h3>Shyam Garg</h3>
              <h4>Founder, Director</h4>
              <p>
                Shyam is a highly sought-after trainer and counselor with 20 years of
                experience. He is a Certified Trainer, NLP Practitioner, and DMIT
                Counselor. He has successfully conducted over 3000 workshops for
                corporates, schools, and individuals. His mission is to empower
                people to unlock their true potential.
              </Two>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- === OUR TEAM SECTION (REMOVED) === -->

    <Footer />
  </body>
</html>

<style>
  /* Use the same container as the homepage */
  .container {
    width: 1100px;
    max-width: calc(100% - 4rem);
    margin: 0 auto;
    padding: 4rem 2rem;
  }
  
  h2 { text-align: center; }
  h3 { text-align: center; color: var(--color-text-light); margin-top: 3rem;}

  /* === About Hero === */
  .about-hero {
    background-color: var(--color-text-body); /* D_Grey */
    text-align: center;
    padding: 2rem 0;
  }
  .about-hero h1 {
    color: var(--color-bg); /* White */
  }
  .about-hero .subtitle {
    font-size: 1.25rem;
    color: var(--color-bg-light); /* Silver */
    max-width: 800px;
    margin: 0 auto;
  }

  /* === Mission & Vision === */
  .mission-vision {
    background-color: var(--color-primary); /* Darkest black */
  }
  .mission-vision .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }
  .mv-card {
    background-color: var(--color-text-body); /* D_Grey */
    padding: 2.5rem;
    border-radius: 12px;
    border: 1px solid var(--color-text-light);
  }
  .mv-card h2 {
    color: var(--color-secondary); /* Yellow */
    text-align: left;
    margin-bottom: 1rem;
  }
  .mv-card p {
    font-size: 1.1rem;
    font-style: italic;
    color: var(--color-bg-light);
    line-height: 1.7;
  }

  /* === Founders === */
  .founders {
    background-color: var(--color-primary); /* Darkest black */
  }
  .founders-grid {
    display: grid;
    grid-template-columns: 1fr; /* Single column on mobile */
    gap: 3rem;
    margin-top: 3rem;
  }
  .founder-card {
    display: grid;
    grid-template-columns: 200px 1fr; /* Image | Text */
    gap: 2rem;
    background-color: var(--color-text-body);
    border-radius: 12px;
    overflow: hidden;
  }
  .founder-img {
    width: 200px;
    height: 100%;
    object-fit: cover;
  }
  .founder-info {
    padding: 2rem 2rem 2rem 0;
  }
  .founder-info h3 {
    text-align: left;
    color: var(--color-bg);
  }
  .founder-info h4 {
    text-align: left;
    color: var(--color-secondary); /* Yellow */
    font-weight: 400;
    font-style: italic;
    margin-bottom: 1rem;
  }
  .founder-info p {
    color: var(--color-bg-light);
    font-size: 1rem;
    line-height: 1.6;
  }

  /* === Team (REMOVED) === */

  /* === Responsive Tweaks === */
  @media (max-width: 900px) {
    .mission-vision .container {
      grid-template-columns: 1fr; /* Stack on mobile */
    }
    .founder-card {
      grid-template-columns: 1fr; /* Stack on mobile */
      text-align: center;
    }
    .founder-img {
      width: 100%;
      height: 300px;
    }
    .founder-info {
      padding: 0 2rem 2rem 2rem;
    }
    .founder-info h3,
    .founder-info h4 {
      text-align: center;
    }
  }

  @media (max-width: 720px) {
    .container {
      max-width: calc(100% - 2rem);
      padding: 3rem 1rem;
    }
  }
</style>
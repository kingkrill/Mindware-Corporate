<style>
  /* === 1. HERO SECTION: COLLAGE (Unchanged) === */
  .hero {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .scrolling-collage-bg {
    position: absolute;
    top: -50%;
    left: 0;
    width: 100%;
    height: 200%;
    display: flex;
    gap: 1rem;
    z-index: 0;
    opacity: 0.5; /* Increased opacity */
    filter: grayscale(20%); /* Reduced grayscale */
  }
  .collage-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-grow: 1;
    min-width: 300px;
  }
  .collage-column img,
  .collage-column :global(img) { /* Selects Astro <Image> component */
    width: 100%;
    height: auto;
    border-radius: 8px;
  }
  @keyframes scrollUp {
    from { transform: translateY(0); }
    to { transform: translateY(-50%); }
  }
  @keyframes scrollDown {
    from { transform: translateY(-50%); }
    to { transform: translateY(0); }
  }
  .collage-column:nth-child(1) {
    animation: scrollUp 60s linear infinite alternate;
  }
  .collage-column:nth-child(2) {
    animation: scrollDown 70s linear infinite alternate;
  }
  .collage-column:nth-child(3) {
    animation: scrollUp 50s linear infinite alternate;
  }
  .hero .container {
    position: relative;
    z-index: 1;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
  }

  /* === 2. ABOUT BLURB: ANIMATED CARD (Unchanged) === */
  .about-blurb .container {
    /* Remove padding so the card can be full-width if needed */
    padding: 4rem 0;
  }

  .about-card {
    /* This is the new animated card */
    position: relative;
    overflow: hidden; /* This keeps the bubbles inside the card */
    background-color: var(--color-text-body); /* D_Grey background */
    border-radius: 12px;
    padding: 4rem;
    max-width: 900px;
    margin: 0 auto;
    border: 1px solid var(--color-text-light);
  }

  .about-card-content {
    /* Sits on top of the bubbles */
    position: relative;
    z-index: 2;
  }

  /* Ensure text inside the card is white */
  .about-card h2,
  .about-card p {
    color: var(--color-bg);
  }

  .bubble-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .bubble-background i {
    position: absolute;
    bottom: -200px;
    width: 40px;
    height: 40px;
    background-color: var(--color-warning); 
    border-radius: 50%;
    opacity: 0.6;
    animation: rise 25s infinite linear;
  }
  @keyframes rise {
    0% {
      transform: translateY(0) scale(1);
      opacity: 0.6;
    }
    100% {
      transform: translateY(-120vh) scale(0.2);
      opacity: 0;
    }
  }
  /* Vary bubble properties */
  .bubble-background i:nth-child(1) { left: 10%; animation-duration: 20s; width: 30px; height: 30px; }
  .bubble-background i:nth-child(2) { left: 20%; animation-duration: 15s; animation-delay: 2s; width: 50px; height: 50px; }
  .bubble-background i:nth-child(3) { left: 30%; animation-duration: 22s; animation-delay: 5s; }
  .bubble-background i:nth-child(4) { left: 40%; animation-duration: 18s; width: 20px; height: 20px; }
  .bubble-background i:nth-child(5) { left: 50%; animation-duration: 25s; animation-delay: 1s; width: 60px; height: 60px; }
  .bubble-background i:nth-child(6) { left: 60%; animation-duration: 16s; animation-delay: 3s; }
  .bubble-background i:nth-child(7) { left: 70%; animation-duration: 21s; width: 35px; height: 35px; }
  .bubble-background i:nth-child(8) { left: 80%; animation-duration: 17s; animation-delay: 4s; width: 55px; height: 55px; }
  .bubble-background i:nth-child(9) { left: 90%; animation-duration: 23s; animation-delay: 6s; }
  .bubble-background i:nth-child(10) { left: 55%; animation-duration: 28s; width: 25px; height: 25px; }


  /* === 3. SERVICE CARDS: VIBRANT COLORS (Unchanged) === */
  .services-preview .service-card {
    border: none;
    color: var(--color-bg); /* CHANGED: Make text white */
  }

  .services-preview .service-card h3 {
    color: var(--color-bg); /* CHANGED: Make h3 white */
  }

  .services-preview .service-card:nth-child(1) {
    background-color: var(--color-accent); /* Info Blue */
  }
  .services-preview .service-card:nth-child(2) {
    background-color: var(--color-success); /* Success Green */
  }
  .services-preview .service-card:nth-child(3) {
    background-color: var(--color-secondary); /* Secondary Yellow */
    color: var(--color-primary); /* Use dark text on yellow bg */
  }
  .services-preview .service-card:nth-child(3) h3 {
     color: var(--color-primary); /* Use dark text on yellow bg */
  }

  /* === 4. CLIENT TRUST: SCROLLER & BG (UPDATED CSS) === */

  @keyframes scrollLeft {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }

  @keyframes animatedGradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .clients-trust {
    position: relative;
    overflow: hidden;
  }

  .clients-trust::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background: linear-gradient(
      90deg,
      var(--color-primary),
      var(--color-text-body),
      var(--color-primary)
    );
    background-size: 200% 200%;
    animation: animatedGradient 25s ease infinite;
    opacity: 0.5;
  }

  .clients-trust .container {
    position: relative;
    z-index: 1;
  }

  .logo-scroller-container {
    overflow: hidden;
    margin-top: 3rem;
  }

  .logo-scroller {
    display: flex;
    width: max-content;
    white-space: nowrap;
    padding: 1rem 0;
  }
  
  .scroll-left {
    animation: scrollLeft 60s linear infinite; /* Slowed down for more logos */
  }
  
  .scroll-right {
    animation: scrollLeft 70s linear infinite reverse; /* Slowed down for more logos */
  }

  /* UPDATED: This now styles the <Image> component */
  .client-logo-item {
    max-height: 75px; /* CHANGED: Was fixed 'height' */
    height: auto; /* ADDED: Let height be natural */
    width: auto;  /* Let width adjust automatically */
    max-width: 200px; /* Kept max-width */
    object-fit: contain; /* Ensure logo fits, doesn't stretch */
    padding: 0 3rem; /* Increased spacing */
    /* filter: brightness(0) invert(1); REMOVED */
    opacity: 1; /* Make logos fully visible */
  }
</style>
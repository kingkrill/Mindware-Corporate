          <Image src={client7} alt="Client 7 Logo" class="client-logo-item" />
          <Image src={client8} alt="Client 8 Logo" class="client-logo-item" />
          <Image src={client9} alt="Client 9 Logo" class="client-logo-item" />
          <Image src={client10} alt="Client 10 Logo" class="client-logo-item" />
        </div>
        
        <div class="logo-scroller scroll-right">
          <Image src={client11} alt="Client 11 Logo" class="client-logo-item" />
          <Image src={client12} alt="Client 12 Logo" class="client-logo-item" />
          <Image src={client13} alt="Client 13 Logo" class="client-logo-item" />
          <Image src={client14} alt="Client 14 Logo" class="client-logo-item" />
          <Image src={client15} alt="Client 15 Logo" class="client-logo-item" />
          <Image src={client16} alt="Client 16 Logo" class="client-logo-item" />

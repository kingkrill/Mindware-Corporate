<style>
  /* --- GLOBAL FIXES --- */
  body {
    overflow-x: hidden;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  /* --- 1. HERO --- */
  .hero {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }
  .scrolling-collage-bg {
    position: absolute;
    top: -50%;
    left: 0;
    width: 100%;
    height: 200%;
    display: flex;
    gap: 1rem;
    z-index: 0;
    opacity: 0.5; 
    filter: grayscale(20%); 
  }
  .collage-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-grow: 1;
    min-width: 0;
    flex-basis: 0;
  }
  .collage-column img,
  .collage-column :global(img) { 
    width: 100%;
    height: auto;
    border-radius: 8px;
    object-fit: cover;
  }
  @keyframes scrollUp { from { transform: translateY(0); } to { transform: translateY(-50%); } }
  @keyframes scrollDown { from { transform: translateY(-50%); } to { transform: translateY(0); } }
  
  .collage-column:nth-child(1) { animation: scrollUp 60s linear infinite alternate; }
  .collage-column:nth-child(2) { animation: scrollDown 70s linear infinite alternate; }
  .collage-column:nth-child(3) { animation: scrollUp 50s linear infinite alternate; }
  
  .hero .container {
    position: relative;
    z-index: 1;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
    width: 100%;
    box-sizing: border-box;
  }
  .hero h1 {
    font-family: 'Merriweather', 'Atkinson', serif;
    font-weight: 700;
  }

  /* --- NEW: RESULTS SECTION --- */
  .results-section {
    padding: 0;
    width: 100%;
  }
  .results-section .container {
    padding: 4rem 2rem;
    box-sizing: border-box;
  }
  .results-card {
    background-color: #E0F7FA; 
    border-radius: 12px;
    border: 1px solid var(--color-text-light);
    padding: 4rem;
    color: var(--color-text-body);
    text-align: center;
  }
  .center-title {
    text-align: center;
    color: var(--color-primary);
  }
  .center-underline {
    margin: 0 auto 2rem auto;
  }
  .results-intro {
    font-size: 1.2rem;
    margin-bottom: 3rem;
    color: var(--color-text-body);
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    align-items: start;
  }
  .stat-item {
    border-right: 1px solid rgba(0,0,0,0.1);
    padding: 0 1rem;
  }
  .stat-item:last-child {
    border-right: none;
  }
  .stat-number {
    font-family: 'Merriweather', serif;
    font-weight: 700;
    font-size: 3.5rem;
    color: var(--color-primary); 
    line-height: 1;
    margin-bottom: 0.5rem;
  }
  .stat-label {
    font-weight: 700;
    color: var(--color-secondary); /* Keep yellow accent */
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
    text-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }
  .stat-desc {
    font-size: 1rem;
    color: var(--color-text-body);
    margin-bottom: 0.5rem;
  }
  .stat-client {
    font-size: 0.85rem;
    color: var(--color-text-light);
    font-style: italic;
  }


  /* --- 2. BEYOND PREDICTABLE (FIXED LAYOUT) --- */
  .performance-section {
    padding: 0;
    width: 100%;
  }
  .performance-section .container {
    padding: 4rem 2rem;
    box-sizing: border-box;
  }
  .performance-card {
    background-color: var(--color-text-body);
    border-radius: 12px;
    border: 1px solid var(--color-text-light);
    overflow: hidden;
    position: relative;
    padding: 4rem;
    color: var(--color-bg);
  }
  .card-bg-animation {
    position: absolute;
    top: 0;
    left: 0;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.05) 0%, rgba(0,0,0,0) 70%);
    opacity: 0.6;
    animation: moveGradient 20s infinite alternate;
    pointer-events: none;
    z-index: 0;
  }
  @keyframes moveGradient {
    0% { transform: translate(-25%, -25%); }
    100% { transform: translate(0, 0); }
  }
  
  .performance-grid {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .performance-content {
    text-align: left;
  }
  .section-title {
    text-transform: uppercase;
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: var(--color-bg);
  }
  .title-underline {
    width: 60px;
    height: 4px;
    background-color: var(--color-secondary);
    margin-bottom: 2rem;
  }
  .performance-content p {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    color: var(--color-bg-light);
  }
  .performance-content strong { color: var(--color-bg); }
  .performance-cta { margin-top: 2rem; }

  /* GRAPH CONTAINER */
  .performance-graph {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
  }
  
  /* SVG Wrapper: FULL WIDTH */
  .svg-graph-wrapper {
    position: relative;
    width: 100%;
    max-width: 100%;
    transform: translateX(-50px);
  }
  .main-chart-svg {
    width: 100%;
    height: auto;
    overflow: visible;
  }

  /* LOGO OVERLAY */
  .logo-overlay {
    position: absolute;
    top: 40%;
    right: -10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 2;
  }
  /* Updated Logo Size: 80px + 15% = ~92px */
  .graph-logo-img {
    width: 69px;
    height: auto;
  }
  .graph-logo-text {
    font-family: 'Merriweather', serif;
    font-size: 1rem;
    font-weight: 700;
    color: white;
    margin-top: 5px;
  }

  /* --- 3. SERVICES (Unchanged) --- */
  .services-preview .service-card { border: none; color: var(--color-bg); }
  .services-preview .service-card h3 { color: var(--color-bg); }
  .services-preview .service-card:nth-child(1) { background-color: var(--color-accent); }
  .services-preview .service-card:nth-child(2) { background-color: var(--color-success); }
  .services-preview .service-card:nth-child(3) { background-color: var(--color-secondary); color: var(--color-primary); }
  .services-preview .service-card:nth-child(3) h3 { color: var(--color-primary); }

  /* --- 4. CLIENTS (FULL WIDTH) --- */
  @keyframes scrollLeft { from { transform: translateX(0); } to { transform: translateX(-50%); } }
  @keyframes animatedGradient { 
    0% { background-position: 0% 50%; } 
    50% { background-position: 100% 50%; } 
    100% { background-position: 0% 50%; } 
  }
  .clients-trust {
    position: relative;
    overflow: hidden;
    background-color: var(--color-bg);
    width: 100%;
    padding-bottom: 6rem;
  }
  .clients-trust::before {
    content: '';
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%; z-index: 0;
    background: linear-gradient(90deg, var(--color-bg), var(--color-bg-light), var(--color-bg));
    background-size: 200% 200%;
    animation: animatedGradient 25s ease infinite;
    opacity: 1;
  }
  .clients-trust .container { position: relative; z-index: 1; }
  .clients-trust .container h2 { color: var(--color-primary); }
  .clients-trust .container p { color: var(--color-text-body); }
  
  .logo-scroller-container { 
    overflow: hidden; 
    margin-top: 3rem; 
    width: 100%; 
  }
  .logo-scroller { 
    display: flex; 
    width: max-content; 
    white-space: nowrap; 
    padding: 1rem 0; 
  }
  .scroll-left { animation: scrollLeft 60s linear infinite; }
  .scroll-right { animation: scrollLeft 70s linear infinite reverse; }
  .client-logo-item {
    max-height: 75px; height: auto; width: auto; max-width: 200px;
    object-fit: contain; padding: 0 3rem; opacity: 1;
  }

  /* --- RESPONSIVE --- */
  @media (max-width: 900px) {
    .performance-grid {
      grid-template-columns: 1fr;
    }
    .performance-graph {
      margin-top: 3rem;
    }
    .performance-card {
      padding: 2rem;
    }
    /* Stack stats on tablet */
    .stats-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
    .stat-item {
      border-right: none; /* Remove border on stacked items */
    }

    /* Hide 3rd column on tablet */
    .collage-column:nth-child(3) {
      display: none;
    }
    .svg-graph-wrapper {
      transform: none;
    }
  }
  
  @media (max-width: 600px) {
    .hero .container h1 {
      font-size: 2rem; /* Adjusted for smaller screens */
    }
    /* Stack stats on mobile */
    .stats-grid {
      grid-template-columns: 1fr;
    }
    /* Hide 2nd column on mobile (show only 1) */
    .collage-column:nth-child(2) {
      display: none;
    }
    .results-card {
      padding: 2rem 1rem;
    }
    .stat-number {
        font-size: 2.5rem;
    }
  }
</style>

<!-- SCRIPT for Counting Numbers (Now Standard JS - No Types) -->
<script>
  // @ts-nocheck
  
  // Use 'DOMContentLoaded' to ensure the script runs after elements exist
  document.addEventListener('DOMContentLoaded', () => {
    function animateValue(obj, start, end, duration) {
      let startTimestamp = null;
      const step = (timestamp) => {
        if (!startTimestamp) startTimestamp = timestamp;
        const progress = Math.min((timestamp - startTimestamp) / duration, 1);
        
        if (obj) {
          obj.innerHTML = Math.floor(progress * (end - start) + start) + "%";
        }
        
        if (progress < 1) {
          window.requestAnimationFrame(step);
        }
      };
      window.requestAnimationFrame(step);
    }

    // Fallback: if IntersectionObserver isn't supported, just show the final numbers
    if (!('IntersectionObserver' in window)) {
      const counters = document.querySelectorAll('.stat-number');
      counters.forEach((counter) => {
        const target = counter.getAttribute('data-target');
        if(target) counter.innerHTML = target + "%";
      });
      return;
    }

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const counters = entry.target.querySelectorAll('.stat-number');
          counters.forEach((counter) => {
            const dataTarget = counter.getAttribute('data-target');
            if (dataTarget) {
              const target = parseInt(dataTarget, 10);
              animateValue(counter, 0, target, 2000);
            }
          });
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 }); // Lower threshold to trigger earlier

    const resultsSection = document.querySelector('.results-card');
    if (resultsSection) {
      observer.observe(resultsSection);
    }
  });
</script>